<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:DotnetGui.App"
            x:Class="DotnetGui.App.AppFlyout"
            FlyoutLayoutBehavior="Popover">
    <FlyoutPage.Flyout>
        <local:FlyoutMenu x:Name="flyoutMenu" />
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:MainPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>